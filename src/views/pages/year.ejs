<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- slide trái -->
        <%- include('../partials/left') %>
            <!-- End slide trái -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Top bar -->
                    <%- include('../partials/top') %>
                        <!-- End of Top bar -->

                        <!-- Begin Page Content -->
                        <div class="container-fluid" style="margin-top: 20px;">

                            <!-- DataTales Example -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary" style="display: inline;">Years
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Year</th>
                                                    <th>Slug</th>
                                                    <th style="width: 25%;">
                                                        <a href="javascript:void(0)" data-toggle="modal"
                                                            data-target="#newYearModal">
                                                            New
                                                        </a>
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% years.forEach(year=> { %>
                                                    <tr>
                                                        <td>
                                                            <%- year.id; %>
                                                        </td>
                                                        <td>
                                                            <%- year.name %>
                                                        </td>
                                                        <td>
                                                            <%- year.slug %>
                                                        </td>
                                                        <td>
                                                            <a href="javascript:void(0)" class="btn btn-primary"
                                                                data-id="<%- year.id %>"
                                                                onclick="getInforYear(this)">Edit</a>
                                                            <a href="javascript:void(0)" class="btn btn-danger"
                                                                data-id="<%- year.id %>"
                                                                onclick="deleteYear(this)">Delete</a>
                                                        </td>
                                                    </tr>
                                                    <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <div class="modal fade" id="newYearModal" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog" style="max-width: 30%;">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">NEW YEAR</h5>
                                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">×</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div>
                                                <div class="form-group">
                                                    <label for="year">Year:</label>
                                                    <input type="text" class="form-control" id="addYear"
                                                        autocomplete="off">
                                                </div>
                                                <button id="newYear" class="btn btn-primary">Add</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="modal fade" id="editYearModal" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog" style="max-width: 30%;">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">EDIT YEAR</h5>
                                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">×</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div>
                                                <div class="form-group">
                                                    <label for="year">Year:</label>
                                                    <input type="text" class="form-control" id="editYear"
                                                        autocomplete="off">
                                                </div>

                                                <input type="hidden" id="idYear">
                                                <button id="updateYear" class="btn btn-primary">Update</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <%- include('../partials/footer') %>
                    <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <%- include('../partials/bot') %>

</body>

</html>